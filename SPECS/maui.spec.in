%define name     maui
%define version  @VERSION@
%define spooldir %{_localstatedir}/spool/%{name}

Name:    %{name}
Version: %{version}
Release: 1%{?dist}
Summary: Maui batch scheduler

License: moab
Source0: %{name}-%{version}.tar.gz
Source1: maui.service.in
Patch0:  maui-destdir.patch
Patch1:  maui-ncpu.patch

BuildRequires: torque torque-devel

%package client
Summary: Client programs for Maui batch scheduler
Requires: %{name}

%package server
Summary: Server program for Maui batch scheduler
Requires: %{name}
BuildRequires: systemd
%{?systemd_requires}

%package devel
Summary: Development files for Maui batch scheduler
Requires: %{name}

%description
Maui batch scheduler.

%description client
Client programs for Maui batch scheduler.

%description server
Server program for Maui batch scheduler.

%description devel
Development libraries and header for Maui batch scheduler.

%prep
%autosetup -p 0
cp %{SOURCE1} .

%build
%configure --with-prefix=%{_prefix} --with-pbs=%{_prefix} --with-spooldir=%{spooldir}
make %{?_smp_mflags}

%install
%make_install

mkdir -p %{buildroot}%{_libdir}
mv %{buildroot}/usr/lib/libmcom.a %{buildroot}%{_libdir}/
mv %{buildroot}/usr/lib/libmoab.a %{buildroot}%{_libdir}/

mkdir -p %{buildroot}%{_unitdir}
sed -e 's|@SBINDIR@|%{_sbindir}|g'  \
    -e 's|@SPOOLDIR@|%{spooldir}|g' \
    %{_sourcedir}/maui.service.in > %{buildroot}%{_unitdir}/maui.service

%files
%license LICENSE
%license LICENSE.mcompat
%config(noreplace) %{_localstatedir}/spool/maui/maui-private.cfg
%config(noreplace) %{_localstatedir}/spool/maui/maui.cfg

%files client
%{_bindir}/canceljob
%{_bindir}/changeparam
%{_bindir}/checkjob
%{_bindir}/checknode
%{_bindir}/diagnose
%{_bindir}/mbal
%{_bindir}/mclient
%{_bindir}/mdiag
%{_bindir}/mjobctl
%{_bindir}/mnodectl
%{_bindir}/mprof
%{_bindir}/mschedctl
%{_bindir}/mstat
%{_bindir}/releasehold
%{_bindir}/releaseres
%{_bindir}/resetstats
%{_bindir}/runjob
%{_bindir}/schedctl
%{_bindir}/sethold
%{_bindir}/setqos
%{_bindir}/setres
%{_bindir}/setspri
%{_bindir}/showbf
%{_bindir}/showconfig
%{_bindir}/showgrid
%{_bindir}/showhold
%{_bindir}/showq
%{_bindir}/showres
%{_bindir}/showstart
%{_bindir}/showstate
%{_bindir}/showstats

%files server
%{_sbindir}/maui
%{_unitdir}/maui.service

%files devel
%{_includedir}/moab.h
%{_libdir}/libmcom.a
%{_libdir}/libmoab.a

%changelog
